<h2>アカウント編集 </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname %> <br />
    <%= f.text_field :nickname, autofocus: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(変更したくない場合は空白のままにします)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <% if false %>
    <div><%= f.label :current_password %> <i><%= t(".current_password_warning") %></i><br />
    <%= f.password_field :current_password %></div>
  <% end %>

  <div class="field">
    <%= f.label :self_introduction %>（任意）<br />
    <%= f.text_field :self_introduction, autocomplete: "self_introduction" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<h3>アカウント削除</h3>

<p>削除してよろしいですか? <%= button_to "削除", registration_path(resource_name), data: { confirm: "削除して本当によろしいですか？" }, method: :delete %></p>

<%= link_to "もどる", :back %>
