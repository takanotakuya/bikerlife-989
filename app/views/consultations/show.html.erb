<div class="item-show">
  <div class="item-box">
    <p><%= @consultation.user.nickname %>さんの投稿</p>
    <h2 class="name">
      <%= @consultation.name %>
    </h2>
    <h5>
      <%= @consultation.post_text%>
    </h5>
    <% if user_signed_in? %>
      <% if current_user.id == @consultation.user_id %>
        <%= link_to "編集", edit_consultation_path(@consultation.id), method: :get, class: "item-red-btn" %>
        <p class="or-text">or</p>
        <%= link_to "削除", consultation_path(@consultation.id), method: :delete, class:"item-destroy" %>
      <% end %>
    <% end %>
  </div>
  <div class="container">
    <% if user_signed_in? %>
      <%= form_with(model: [@consultation, @consultations_comment], local: true) do |form| %>
        <%= form.text_area :comment_text, placeholder: "コメントする", rows: "2" %>
        <%= form.submit "SEND" %>
      <% end %>
    <% else %>
      <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>
    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% @consultations_comments.each do |consultations_comment| %>
        <p>
          <strong><%= link_to consultations_comment.user.nickname, "/users/#{consultations_comment.user_id}" %>：</strong>
          <%= consultations_comment.comment_text %> 
        </p>
      <% end %>
    </div>
  </div>
</div>