<%= form_with model: @post, local: true do |f| %>

<%= render 'shared/error_messages', model: f.object %>

  <div class="img-upload">
    <div class="weight-bold-text">
      投稿画像
      <span class="indispensable">必須</span>
    </div>
    <div class="click-upload">
      <p>
        クリックしてファイルをアップロード
      </p>
      <%= f.file_field :image, id:"item-image" %>
    </div>
  </div>

  <div class="new-items">
    <div class="weight-bold-text">
      投稿名
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :name, class:"items-text", id:"item-name", placeholder:"投稿名" %>
    <div class="items-explain">
      <div class="weight-bold-text">
        投稿の説明
      </div>
      <%= f.text_area :post_text, class:"items-text", id:"item-info", placeholder:"投稿の説明" ,rows:"7" %>
    </div>
  </div>
  <div class="sell-btn-contents">
      <%= f.submit "投稿する" ,class:"sell-btn" %>
      <%=link_to 'もどる', post_path, class:"back-btn" %>
    </div>
<% end %>